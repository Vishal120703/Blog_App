<%- include('element/header') %>
<%- include('element/navbar') %>

<div class="hero-section">
  <div class="container">
    <div class="text-center">
      <h1>Welcome to Bloguu</h1>
      <p>Share your stories. Read others. Connect with the community.</p>
      <form action="/" method="GET" class="search-container d-flex mx-auto mt-4" style="max-width: 600px;">
        <input 
          type="text" 
          name="search" 
          placeholder="Search posts..." 
          value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
          class="flex-grow-1">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>
  </div>
</div>

<div class="container py-4">
  <div class="row">
    <div class="col-lg-8">
      <!-- Category Filter -->
      <% if (categories && categories.length > 0) { %>
        <div class="category-chips mb-4">
          <a href="/" class="category-chip <%= !categoryFilter ? 'active' : '' %>">All</a>
          <% categories.forEach(cat => { %>
            <a href="/?category=<%= cat %>" class="category-chip <%= categoryFilter === cat ? 'active' : '' %>">
              <%= cat %>
            </a>
          <% }) %>
        </div>
      <% } %>
      
      <!-- Search Results -->
      <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
        <div class="alert alert-info mb-4">
          Found <strong><%= blogs.length %></strong> result<%= blogs.length !== 1 ? 's' : '' %> for "<%= searchQuery %>"
          <a href="/" class="ms-2">Clear</a>
        </div>
      <% } %>
      
      <!-- Blog Posts -->
      <% if (blogs.length === 0) { %>
        <div class="blog-card text-center p-5">
          <i class="fas fa-file-alt fa-3x text-muted mb-3" style="opacity: 0.3;"></i>
          <h4 class="text-muted mb-3">No posts yet</h4>
          <p class="text-muted mb-4">
            <% if (searchQuery || categoryFilter) { %>
              No posts match your search. Try different keywords.
            <% } else { %>
              Be the first to share something!
            <% } %>
          </p>
          <% if (typeof user !== 'undefined' && user) { %>
            <a href="/user/dashboard/post" class="btn btn-primary">Write Your First Post</a>
          <% } else { %>
            <a href="/user/login" class="btn btn-primary">Login to Get Started</a>
          <% } %>
        </div>
      <% } else { %>
        <% blogs.forEach(blog => { %>
          <% 
            const words = blog.content.split(' ').length;
            const readingTime = Math.ceil(words / 200);
          %>
          <div class="blog-card">
            <% if (blog.image) { %>
              <img src="<%= blog.image %>" alt="<%= blog.title %>">
            <% } %>
            <div class="blog-card-body">
              <div class="mb-2">
                <span class="badge badge-primary"><%= blog.category %></span>
              </div>
              <h3 class="blog-card-title">
                <a href="/post/<%= blog._id %>"><%= blog.title %></a>
              </h3>
              <p class="text-muted mb-3">
                <%= blog.excerpt || blog.content.substring(0, 150) %><% if (blog.content.length > 150 && !blog.excerpt) { %>...<% } %>
              </p>
              <div class="post-meta mb-3">
                <i class="fas fa-user"></i> <a href="/profile/<%= blog.auther %>" class="text-decoration-none text-muted"><%= blog.auther %></a>
                <span class="ms-3"><i class="far fa-calendar"></i> <%= new Date(blog.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
                <span class="ms-3"><i class="far fa-clock"></i> <%= readingTime %> min read</span>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="text-muted me-3"><i class="fas fa-eye"></i> <%= blog.views || 0 %></span>
                  <span class="text-muted"><i class="fas fa-heart text-danger"></i> <%= blog.likes || 0 %></span>
                </div>
                <a href="/post/<%= blog._id %>" class="btn btn-outline-primary btn-sm">Read More â†’</a>
              </div>
            </div>
          </div>
        <% }) %>
        
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
              <% if (hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/?page=<%= prevPage %><%= searchQuery ? '&search=' + searchQuery : '' %><%= categoryFilter ? '&category=' + categoryFilter : '' %>">Previous</a>
                </li>
              <% } %>
              
              <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                  <li class="page-item active">
                    <span class="page-link"><%= i %></span>
                  </li>
                <% } else if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                  <li class="page-item">
                    <a class="page-link" href="/?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %><%= categoryFilter ? '&category=' + categoryFilter : '' %>"><%= i %></a>
                  </li>
                <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
              <% } %>
              
              <% if (hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/?page=<%= nextPage %><%= searchQuery ? '&search=' + searchQuery : '' %><%= categoryFilter ? '&category=' + categoryFilter : '' %>">Next</a>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>
      <% } %>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
      <% if (recentPosts && recentPosts.length > 0) { %>
        <div class="sidebar-widget">
          <h5>Recent Posts</h5>
          <ul>
            <% recentPosts.forEach(post => { %>
              <li>
                <a href="/post/<%= post._id %>"><%= post.title %></a>
                <br>
                <small class="text-muted"><%= new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></small>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      
      <% if (popularPosts && popularPosts.length > 0) { %>
        <div class="sidebar-widget">
          <h5>Popular Posts</h5>
          <ul>
            <% popularPosts.forEach(post => { %>
              <li>
                <a href="/post/<%= post._id %>"><%= post.title %></a>
                <br>
                <small class="text-muted"><%= post.views || 0 %> views</small>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      
      <% if (categories && categories.length > 0) { %>
        <div class="sidebar-widget">
          <h5>Categories</h5>
          <div>
            <% categories.forEach(cat => { %>
              <a href="/?category=<%= cat %>" class="badge badge-primary me-2 mb-2" style="text-decoration: none;"><%= cat %></a>
            <% }) %>
          </div>
        </div>
      <% } %>
      
      <% if (typeof user === 'undefined' || !user) { %>
        <div class="sidebar-widget" style="background: #f0f9ff; border-color: var(--primary);">
          <h5 style="color: var(--primary);">Join Us</h5>
          <p class="mb-3">Start writing and sharing your stories with the community!</p>
          <a href="/user/signup" class="btn btn-primary btn-sm">Sign Up Free</a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('element/footer') %>
